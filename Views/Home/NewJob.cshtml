@{
    ViewData["Title"] = "Add a new job";
}

@model Job;
<partial Name="Banner" />


    <div class="row mt-5">
        <div class="col-12">
            <h2>Add a newly applied job</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form action="#" method="post" class="border rounded p-3">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.JobTitle"></label>
                            <input  class="form-control" type="text" asp-for="@Model.JobTitle">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.JobURL"></label>
                            <input  class="form-control" type="text" asp-for="@Model.JobURL">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.JobAppliedDate"></label>
                            <input  class="form-control" type="date" asp-for="@Model.JobAppliedDate" >
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>


<h1>NEW</h1>